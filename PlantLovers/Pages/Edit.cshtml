@page  "{flowerId:int}"
@model PlantLovers.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editing @Model.Flower.PlantName</h2>

<form method="post">

    <input type="hidden" asp-for="Flower.ID" />
    <div class="form-group">
        <label asp-for="Flower.PlantName"></label>
        <input asp-for="Flower.PlantName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Flower.PlantPrice"></label>
        <input asp-for="Flower.PlantPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Flower.PlantDescription"></label>
        <input asp-for="Flower.PlantDescription" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>





